<div class="box">
  <h1>Create a checklist</h1>
  <%= simple_form_for(@checklist, remote: true) do |f| %>
  <%= f.input :title, placeholder: 'Recipe name', input_html: { class: "form-title" } %>
  <%= f.input :description, input_html: { class: "form-description" } %>
  <%= f.input :deadline, input_html: { class: "form-deadline" } %>
  <%= f.input :priority_level, input_html: { class: "form-priority-level" } %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: 'btn-grey mb-2' %>
  <% end %>
  <%= link_to 'Back to checklists', checklists_path, class: 'btn-grey' %>
</div>

