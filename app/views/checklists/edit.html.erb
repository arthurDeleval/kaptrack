<div class="box">
  <%= simple_form_for(@checklist, remote: true) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input  :deadline, as: :string, :label=>"Date of update", required: false, input_html: {class: "datepicker"}, placeholder:"indicate a specific date" %>
    <%= f.input :priority_level %>
    <%= f.input :photo, as: :file %>
      <div class="container">
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
      <%= link_to 'Back to checklists', checklists_path, class: 'btn btn-primary mt-2' %>
      </div>
</div>

