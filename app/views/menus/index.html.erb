<div class="container-index">
  <% @recipes.each do |recipe| %>
  <% if recipe.menu_visible? %>
    <div class="card-prod">
      <% if recipe.photo.attached? %>
      <%= cl_image_tag recipe.photo.key %>
      <% end %>
        <div class="card-prod-infos">
        <h2><%= recipe.name %></h2>
        <div class="card-infos">
          <div class="card-infos-number">
            <p><i class="fas fa-money-bill-wave-alt"></i> Price <%= recipe.price %>â‚¬</p>
            <p><%= recipe.specificity %></p>
          </div>
          <div class="card-infos-other">
            <p><%= recipe.meal_description %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <% end %>
</div>
