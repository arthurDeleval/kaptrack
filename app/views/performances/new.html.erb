<div class="container">
    <h2>Update your performance</h2>
    <%= simple_form_for [@performance] do |f| %>
      <%= f.input  :date, as: :string, :label=>"Enter a day", required: false, input_html: {class: "datepicker"}, placeholder:"indicate a specific date" %>
      <%= f.input :server_number,:label=>"Number of employee", as: :integer, placeholder:"indicate the number of employees" %>
      <%= f.input :customer_number, :label=>"Number of customer", as: :integer, placeholder:"indicate the number of employees" %>
      <p> Dishes sold</p>
    <div class="recipes" data-recipes="<%=Recipe.all.order(:name).to_json%>"></div>
      <div class="btn btn-primary">Add a dish sold</div>
      <%= f.button :submit, "Update dashboard" %>
    <% end %>
</div>
