<div class="btn-container-show">
  <div class="btn-show-recipe">
    <%= link_to 'My recipes', recipes_path, class: 'btn-main' %>
    <% if policy(@recipe).edit? %>
      <%= link_to 'Edit', edit_recipe_path, class: 'btn-main' %>
    <% end %>
    <% if policy(@recipe).destroy? %>
      <%= link_to 'Delete', recipe_path, class: 'btn-main', method: :delete, data: { confirm: "Are you sure?"} %>
    <% end %>
  </div>
</div>

<div class="card-container-show">
  <div class="card-product-show">
    <% if @recipe.photo.attached? %>
      <%= cl_image_tag @recipe.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <div class="card-product-infos">
      <div class="card-product-container">
        <div class="card-product-name">
          <h1><%=@recipe.name%></h1>
        </div>

      </div>
      <div class="scrollable" style="height: 400px; overflow: scroll;">
        <div class="mb-3">
          <h2>Recipe decription</h2>
          <%= @recipe.recipe_description %>

          <p><%= @recipe.price %>â‚¬ ||
          <%= @recipe.preparation_time %>(min) ||
          <%= @recipe.specificity %>
          </p>
        </div>
        <div>
          <h2>Meal description</h2>
          <%= @recipe.meal_description %>
        </div>
        <div>
          <h2>Ingredients</h2>
          <% @recipe.product_recipes.each do |product_recipe| %>
            <%= product_recipe.product.name %>
            <%= product_recipe.recipe_quantity %>
            <%= product_recipe.product.measure_unit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
