<div class="header-recipe">
  <%= form_tag lots_path, method: :get, class: "d-flex ml-4" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a specific stock ..."
    %>
    <%= submit_tag "Search", class: "btn-search" %>
  <% end %>
</div>

<div class="container-index">
  <% @lots.each do |lot| %>
    <div class="card-prod">
      <% if lot.photo.attached? %>
      <%= cl_image_tag lot.photo.key %>
      <% end %>
        <div class="card-prod-infos">
        <h2><%= lot.product.name %></h2>
        <div class="card-infos">
          <div class="card-infos-number">
            <p>Quantity: <%= lot.quantity %></p>
            <p>Cost: <%= lot.cost %>â‚¬</p>
          </div>
          <div class="card-infos-other">
            <p>Expiration date: <%= lot.expiration_date %></p>
          </div>
          <div class="card-infos-other">
            <p>Supplier:<%= lot.supplier.name %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
